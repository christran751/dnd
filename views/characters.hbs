{{!Adapted from the provided bsg-people.hbs starter code}}
<h1>{{title}}</h1>
<table border="1" cellpadding="5" cellspacing="0">
  <thead>
    <tr>
      <th>Name</th>
      <th>Race</th>
      <th>Class</th>
      <th>Role</th>
      <th>Level</th>
      <th>Max HP</th>
      <th>AC</th>
      <th>Initiative Bonus</th>
     {{!Our Own Work}}
      <th>Remove</th>
    </tr>
  </thead>
  <tbody>
      {{#each characters}}
        <tr>
          <td>{{displayName}}</td>
          <td>{{race}}</td>
          <td>{{characterClass}}</td>
          <td>{{characterRole}}</td>
          <td>{{characterLevel}}</td>
          <td>{{maxHitPoint}}</td>
          <td>{{armorClass}}</td>
          <td>{{initiativeBonus}}</td>
          <td>
            <form method="POST" action="/delete-character">
              <input type="hidden" name="idCharacters" value="{{idCharacters}}">
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
      {{/each}}
  </tbody>
</table>

{{!Our Own Work}}
<h2>Add New Character</h2>
<form method="POST" action="/add-character">
  Name: <input type="text" name="displayName" required><br>
  Race: <input type="text" name="race"><br>
  Class: <input type="text" name="characterClass"><br>
  Role: <input type="text" name="characterRole"><br>
  Level: <input type="number" name="characterLevel"><br>
  Max HP: <input type="number" name="maxHitPoint"><br>
  AC: <input type="number" name="armorClass"><br>
  Initiative Bonus: <input type="number" name="initiativeBonus"><br>
  <button type="submit">Add Character</button>
</form>

{{!Our Own Work}}
<h2>Update Character</h2>
<form method="POST" action="/update-character">
  Character ID:
  <select name="idCharacters" required>
    {{#each characters}}
    <option value="{{idCharacters}}">
      {{displayName}} (ID: {{idCharacters}})
    </option>
    {{/each}}
  </select>
  <br><br>
  Name: <input type="text" name="displayName"><br>
  Race: <input type="text" name="race"><br>
  Class: <input type="text" name="characterClass"><br>
  Role: <input type="text" name="characterRole"><br>
  Level: <input type="number" name="characterLevel"><br>
  Max HP: <input type="number" name="maxHitPoint"><br>
  AC: <input type="number" name="armorClass"><br>
  Initiative Bonus: <input type="number" name="initiativeBonus"><br>
  <button type="submit">Update Character</button>
</form>


