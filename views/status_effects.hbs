{{!Adapted from the provided bsg-people.hbs starter code}}
<h1>{{title}}</h1>
<table border="1" cellpadding="5" cellspacing="0">
  <thead>
    <tr>
      <th>Character</th>
      <th>Encounter</th>
      <th>Condition Status</th>
      <th>Duration</th>
      <th>Effect Amount</th>
      {{!Our Own Work}}
      <th>Remove</th>
    </tr>
  </thead>
  <tbody>
      {{#each status_effects}}
        <tr>
          <td>{{displayName}}</td>
          <td>{{nameOfLocation}}</td>
          <td>{{conditionStatus}}</td>
          <td>{{duration}}</td>
          <td>{{effectAmount}}</td>
          <td>
            <form method="POST" action="/status_effects/delete">
              <input type="hidden" name="idStatusEffect" value="{{idStatusEffect}}">
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
      {{/each}}
  </tbody>
</table>

{{!Our own Work}}
<h2>Add New Status Effect</h2>
<form method="POST" action="/status_effects/add">
  Select Turn:
  <select name="idTurns" required>
    <option value="" disabled selected>Select Turn</option>
    {{#each turnsForDropdown}}
      <option value="{{idTurns}}">
        {{displayName}} - {{nameOfLocation}} (Turn ID: {{idTurns}})
      </option>
    {{/each}}
  </select>
  <br><br>

  Condition Status: <input type="text" name="conditionStatus" required><br>
  Duration: <input type="number" name="duration" required><br>
  Effect Amount: <input type="number" name="effectAmount" required><br>
  <button type="submit">Add Status Effect</button>
</form>

{{!Our own Work}}
<h2>Update Status Effect</h2>
<form method="POST" action="/status_effects/update">
  Select Status Effect:
  <select name="idStatusEffect" required>
    <option value="" disabled selected>Select Status Effect</option>
    {{#each status_effects}}
      <option value="{{idStatusEffect}}">
        {{displayName}} - {{nameOfLocation}} (Status Effect ID: {{idStatusEffect}})
      </option>
    {{/each}}
  </select>
  <br><br>

  Condition Status: <input type="text" name="conditionStatus" required><br>
  Duration: <input type="number" name="duration" required><br>
  Effect Amount: <input type="number" name="effectAmount" required><br>
  <button type="submit">Update Status Effect</button>
</form>
